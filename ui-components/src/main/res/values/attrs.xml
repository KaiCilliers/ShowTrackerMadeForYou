<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- todo renmae all attributes by using camel case-->
    <declare-styleable name="StRatingBar">
        <attr name="strb_show_value_indicator" format="boolean"/>
        <attr name="strb_max_value" format="integer"/>
        <attr name="strb_star_padding" format="integer"/>
    </declare-styleable>

    <declare-styleable name="StExpandableText">
        <attr name="stet_startExpanded" format="boolean"/>
        <attr name="stet_maxLines" format="integer"/>
        <attr name="stet_disableCollapse" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="StActionable">
        <attr name="stac_icon" format="enum">
            <enum name="add" value="0"/>
            <enum name="like" value="1"/>
            <enum name="share" value="2"/>
            <enum name="watch" value="3"/>
        </attr>
        <attr name="stac_text" format="string"/>
    </declare-styleable>

    <!-- todo how to preview setting an image in xml preview pane? -->
    <declare-styleable name="StPoster">
        <attr name="stpImgSrc" format="reference"/>
        <attr name="stpHideIcon" format="boolean"/>
        <attr name="stpCropType" format="enum">
            <enum name="poster" value="0"/>
            <enum name="circle" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="StProgressBar">
        <attr name="stpbHideIcon" format="boolean"/>
        <attr name="stpbHideLabel" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="StPersonProfile">
        <attr name="stppPersonName" format="string"/>
        <attr name="stppYearOfBirth" format="string"/>
        <attr name="stppAddress" format="string"/>
        <attr name="stppCountry" format="string"/>
    </declare-styleable>

    <declare-styleable name="StSettingSubGroup">
        <attr name="stssgSubGroupTitle" format="string"/>
        <attr name="stssgCurrentSelection" format="string"/>
    </declare-styleable>

    <declare-styleable name="StSettingGroupItem">
        <attr name="ssgiChecked" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="StCollapsableSection">
        <attr name="stcsTitle" format="string"/>
    </declare-styleable>
</resources>