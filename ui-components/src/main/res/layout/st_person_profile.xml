<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <com.sunrisekcdevelopers.ui_components.components.StPoster
        android:id="@+id/st_person_profile_image"
        android:layout_height="100dp"
        android:layout_width="100dp"
        app:stpHideIcon="true"
        app:stpCropType="circle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.sunrisekcdevelopers.ui_components.StTextViewTitle
        android:id="@+id/st_person_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/st_person_profile_image"
        tools:text="Jack Black" />

    <com.sunrisekcdevelopers.ui_components.StTextViewBody
        android:id="@+id/st_person_profile_yob"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/st_person_profile_name"
        app:layout_constraintStart_toEndOf="@id/st_person_profile_image"
        tools:text="1995 · 03 · 23"/>

    <com.sunrisekcdevelopers.ui_components.StTextViewBody
        android:id="@+id/st_person_profile_address"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/st_person_profile_yob"
        app:layout_constraintStart_toEndOf="@id/st_person_profile_image"
        tools:text="Address Line 1"/>

    <com.sunrisekcdevelopers.ui_components.StTextViewBody
        android:id="@+id/st_person_profile_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/st_person_profile_address"
        app:layout_constraintStart_toEndOf="@id/st_person_profile_image"
        tools:text="USA"/>


</merge>